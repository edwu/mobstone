<div id="header">
	<div class="inside">	
	<div class="top clearfix">
					
				<div id="logo">
						
			<%= link_to logo, root_path %>
			
		</div>
		
		<div id="socialLinks" class="clearfix">
			 
				<a class="twitter" href="http://twitter.com/#!/webdesignledger"><span>Twitter</span></a>
						
			 
				<a class="facebook" href="http://www.facebook.com/pages/Web-Design-Ledger/119775514709373"><span>Facebook</span></a>
						
					</div>				
	</div>
	
	<div id="mainNav" class="clearfix">							
		<div class="menu-main-nav-container">
          <ul id="menu-main-nav" class="sf-menu">
            <li class="menu-item current-menu-item"><%= link_to "Featured Deals", root_path%></li>
            <% if signed_in? %>
                <li class="menu-item"><%= link_to "Profile", profile_path%></li>
                <li class="menu-item"><%= link_to "Settings", settings_path %></li>
            <% end %>
            <% if is_admin? %>
                <li class="menu-item"><%= link_to "Users", users_path %></li>
            <% end %>
            <% if is_company? %>
                <li class="menu-item"><%= link_to "Deals", company_deals_path %></li>
            <% end %>
            <li class="menu-item"><%= link_to "Help", help_path %></li>
            <li class="menu-item"><%= link_to "About", about_path %></li>

            <% if signed_in? %>
                <li class="menu-item right-item"><%= link_to "Sign out", signout_path, :method => :delete %></li>
            <% else %>
                <li class="menu-item right-item"><%= link_to "Sign in", signin_path %></li>
            <% end %>
            <% unless signed_in? %>
               <li class="menu-item right-item"><%= link_to "Sign up", signup_path %></li>
            <% end %>

          </ul>
        </div>
	</div>
	
		
	</div>		
</div>


