<div id="vouchers" class="accordion" style="padding-top: 25px; padding-bottom:25px;">
	<ol style="list-style-type:none;">
        <li>
            <h2><span>Pending Deals</span></h2>
            <div id="pdeals">
            	<table id="summary" style="border-style: dashed; border-color: #CC0000; background-color: #cee4d8; font-family:Helvetica, Arial, sans-serif; font-size:16px; height:320px;">
				<tr class="checkout">
				<td class="checkout">Percent Reached</td>
				<td class="checkout">Price</td>
				<td class="checkout">Quantity</td>
				<td class="checkout">Show Deal</td>
				</tr>
				<% counter = 0 %>
				<% current_user.vouchers.each do |voucher|%>
				<% if counter >= 5 %>
					<% break %>
				<% else %>
				
				<tr class="data" valign="top">
				<td class="data" valign="top">1</td>
				<td class="data" valign="top">$<%= Deal.find(voucher.deal_id).org_price %></td>
				<td class="data" valign="top">1</td>
				<td class="data" valign="top"><%= link_to 'Show Deal', deal_path(voucher.deal_id) %></td>
				</tr>
				<% counter += 1 %>
				<% end %>
				<% end %>
				</table>
            </div>
        </li>
        <li>
            <h2><span>Available Vouchers</span></h2>
            <div id="avouchers">
            	<table id="summary" style="border-style: dashed; border-color: #CC0000; background-color: #cee4d8; font-family:Helvetica, Arial, sans-serif; font-size:16px; height:320px;">
				<tr class="checkout">
				<td class="checkout">Company</td>
				<td class="checkout">Purchase Price</td>
				<td class="checkout">Product ID</td>
				<td class="checkout">Description</td>
				</tr>
				<tr class="data">
				<td class="data" valign="top">1</td>
				<td class="data" valign="top">2</td>
				<td class="data" valign="top">3</td>
				<td class="data" align="center"><img src="images/hoodie.jpg"></td>
				</tr>
				</table>
            </div>
        </li>
        <li>
            <h2><span>Redeemed Deals</span></h2>
            <div id="rdeals">
            	<table id="summary" style="border-style: dashed; border-color: #CC0000; background-color: #cee4d8; font-family:Helvetica, Arial, sans-serif; font-size:16px; height:320px;">
				<tr class="checkout">
				<td class="checkout">Company</td>
				<td class="checkout">Purchase Price</td>
				<td class="checkout">Original Price</td>
				<td class="checkout">Description</td>
				</tr>
				<tr class="data">
				<td class="data" valign="top">1</td>
				<td class="data" valign="top">1</td>
				<td class="data" valign="top">3</td>
				<td class="data" valign="top">4</td>
				</tr>
				</table>
            </div>
        </li>
    </ol>
</div>
<script>
jQuery('#vouchers').liteAccordion({
    onActivate : function() {
        this.find('figcaption').fadeOut();
    },
    slideCallback : function() {    
        this.find('figcaption').fadeIn();
    },
    autoPlay : false,
    pauseOnHover : false,
    theme : 'basic',
    rounded : true,
    enumerateSlides : true             
}).find('figcaption:first').show();
</script>



