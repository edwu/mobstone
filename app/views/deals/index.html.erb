
<% if is_company? %>
<%= link_to 'New Deal', company_deals_new_path %>
<% end %>

<h1>Listing deals</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Min price</th>
    <th>Description</th>
    <th>Org price</th>
    <th>Expired</th>
    <th>Startdate</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%= deal.company_id %></td>
    <td><%= deal.min_price %></td>
    <td><%= deal.description %></td>
    <td><%= deal.org_price %></td>
    <td><%= deal.expired %></td>
    <td><%= deal.startdate %></td>
    <td><%= deal.duration %></td>
    <td><%= link_to 'Show', deal %></td>
    <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
    <td><%= link_to 'Destroy', deal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


