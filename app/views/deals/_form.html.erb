      </ul>
    </div>
  <% end %>
    <div class="milestone">
  <%= f.fields_for :milestones do |builder|%>

        <%= builder.label "Number of People" %><br />
        <%= builder.text_field :people %><br />

        <%= builder.label :price %><br />
        <%= builder.text_field :price %><br />

  <% end %>
	      </div>

  <div class="field">
    <%= f.label "Minimum Price"%><br />
    <%= f.text_field :min_price %>
