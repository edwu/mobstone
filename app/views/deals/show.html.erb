
<%= image_tag("therometer.png", :alt => "Progress Made") %>
<p>
  <b>Company:</b>
  <%= @deal.company_id %>
</p>

<p>
  <b>Min price:</b>
  <%= @deal.min_price %>
</p>

<p>
  <b>Description:</b>
  <%= @deal.description %>
</p>

<p>
  <b>Org price:</b>
  <%= @deal.org_price %>
</p>

<p>
  <b>Expired:</b>
  <%= @deal.expired %>
</p>

<p>
  <b>Startdate:</b>
  <%= @deal.startdate %>
</p>

<p>
  <b>Duration:</b>
  <%= @deal.duration %>
</p>


<p>
<b>Number of users:</b>
  <%= @deal.users.count %>
</p>


<% if is_company? %>

    <p><%= link_to 'Edit', edit_deal_path(@deal) %></p>
    <b> Milestones </b><br />
    <% @deal.milestones.each do |milestone| %>
      <b>Price: <%= milestone.price %></b>
      <b>People: <%= milestone.people %></b><br />
    <% end %>
    <br />
    <b>Vouchers issued:</b> <br />
    <% @deal.vouchers.each do |voucher| %>
      <b>Code: <%= voucher.id %></b><br />
    <% end %>
<% else %>
   <p>
  <%= link_to 'Buy Now', buy_deal_path(@deal) %>
</p>
<% end %>
