<%= stylesheet_link_tag 'columnal/columnal' %>
<%= stylesheet_link_tag 'columnal/custom' %>


<%= stylesheet_link_tag 'twitter_bootstrap.min' %>

<div class='container'>
	
	<div class='row'>
		<div class='col_12'>
			<h1>
			  <b>Company:</b>
			  <%= @deal.company_id %>
			</h1>
		</div>
	</div>

	<div class='row'>
		<div class='col_3'>
			<script>
  jQuery(document).ready(
    function() {
      milestone(<%=@percentage %>);
       <% @sorted_milestones.each_with_index do |milestone, index| %>
        milestones(<%=index%>,<%= milestone.people / (@max * 1.0 )%>);
        <% end %>

    }
  );
        <!-- Figure out how to calculate percentage used, number of vouchers for that deal vs largest milestone-->
</script>

<div id="pageHead">
</div>
<div id="thermometer">
  <div id = "people">

  </div>

  <div id= "arrow_people">
    <p><%= @people %></p>

  </div>
    <% @sorted_milestones.each_with_index do |milestone, index| %>
       <div id="<%='milestone' + index.to_s%>">

          <div class="left">$<%= milestone.price %></div>
         <div class="right"><%= milestone.people %> People</div>
        </div>
    <% end %>
</div>

		</div>
		<div class='col_3'>
			
			<div  id='countDownTimer' >
			</div>
			
			<p id='current-price'>
				<b>Current Price:</b>
				<%= @current_price %>	
			</p>
			<div class='user-actions'>
				<%= link_to 'Bid', buy_deal_path(@deal), :class=> 'btn super-large'%>
			</div>
			
			<div class='user-actions'>
				<%= link_to 'Bury', root_path, :class=> 'btn super-large'%>
			</div>
		</div>
		<div class='col_6 last'>

			
			<div id='main-description'>
			  <%= image_tag @deal.image_url.to_s %>
			

				<p>
				  <b>Description:</b>
				  <%= @deal.description %>
				</p>
			</div>
		</div>
		

</div>

<script>
jQuery(document).ready(function(){
    	var timeLeft = <%= @time_left %>;
	
	
		var expireURL = window.location.host + '/deal'
		
		jQuery('#countDownTimer').countdown({until: timeLeft.toString()+'m', expiryUrl:expireURL})
})


</script>

<p>
  <b>Min price:</b>
  <%= @deal.min_price %>
</p>


<p>
  <b>Org price:</b>
  <%= @deal.org_price %>
</p>

<p>
  <b>Expired:</b>
  <%= @deal.expired %>
</p>

<p>
  <b>Startdate:</b>
  <%= @deal.startdate.to_datetime %>
</p>


<p>
  <b>Duration:</b>
  <%= @deal.duration %>
</p>

<p>
  <b>Time now:</b>
  <%= DateTime.now.utc %>
</p>

<p>
  <b>Time Left:</b>
  <%= @time_left %>
</p>


<p>
<b>Number of users:</b>
  <%= @deal.users.count %>
</p>


<% if is_company? %>

    <p><%= link_to 'Edit', edit_deal_path(@deal) %></p>
    <b> Milestones </b><br />
    <% @deal.milestones.each do |milestone| %>
      <b>Price: <%= milestone.price %></b>
      <b>People: <%= milestone.people %></b><br />
    <% end %>
    <br />
    <b>Vouchers issued:</b><br />
    <% @deal.vouchers.each do |voucher| %>
      <b>Code: <%= voucher.id %></b><br />
    <% end %>
<% else %>
   <p>
  <%= link_to 'Buy Now', buy_deal_path(@deal) %>
</p>
<% end %>



